               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="120.0" text="Contacts : " />
                  <TextField fx:id="txtContact" disable="true" onKeyReleased="#txtContactOnKeyReleased" prefHeight="24.0" prefWidth="269.0" promptText="Eg :xxx-xxxxxxx" />
                  <Button fx:id="btnAdd" disable="true" mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="50.0" prefWidth="66.0" text="ADD" />
