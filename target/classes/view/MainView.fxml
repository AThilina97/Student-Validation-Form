            <Button fx:id="btnRemove" disable="true" mnemonicParsing="false" onAction="#btnRemoveOnAction" prefHeight="40.0" prefWidth="90.0" text="Remove" />
         </children>
      </HBox>
      <HBox layoutX="75.0" layoutY="356.0" spacing="10.0" AnchorPane.leftAnchor="75.0" AnchorPane.rightAnchor="85.0">
